<!-- VERSION DATA -->
<div class="jumbotron">
  <h1><%= @version.name %></h1>
  <p class="lead">
    <%= @version.description %>
  </p>
  <div class="row-fluid">
    <div class="span4">
      <a href="javascript:void(0)" class="btn btn-info btn-large"><%= display_status(@version.active) %> Active</a>
    </div>
    <div class="span4 pull-right">
      <a href="javascript:void(0)" class="btn btn-warning btn-large"><%= display_status(@version.archived) %> Archived</a>
    </div>
  </div>
</div>
<% @version.shapefiles.each do |shapefile| %>
  <%= render :partial => 'shapefile', :locals => {:shapefile => shapefile, :version => @version} %>
<% end %>

<div id ="foo" class="modal hide fade modal-fullscreen" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <!--div id="spinner" style="position:fixed;top:50%;left:50%"></div>-->
  <div class="row-fluid">
    <h4 class="text-info" id="textInfo"></h4>
  </div>
  <div class="hero-unit">
    <h1 class="text-center text-warning"><span id="reasonInfo"></span> <span class="text-info" id="warningInfo"></span></h1>
  </div>
</div>
<!-- END VERSION DATA -->
